<% if department = Department.find(params[:id]) %>
  <form class="form-horizontal">
    <fieldset>
      <legend>Bölüm</legend>
      <div class="control-group">
        <label class="control-label" for="disabledInput">Ad (*)</label>
        <div class="controls">
          <input type="text" class="input-xlarge disabled" id="disabledInput" value="<%= department[:name] %>" disabled>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <a href="/<%= request[:controller] %>/<%= department[:id] %>/edit" class="btn btn-primary">Düzenle</a>
      <a href="/<%= request[:controller] %>/<%= department[:id] %>/destroy" class="btn btn-danger"
      onclick="return confirm('Bu kaydı gerçekten silmek istiyor musunuz?')">Sil</a>
    </div>
  </form>
<% else %>
  <center>
    Böyle Bir Bölüm Bulunamadı
  </center>
<% end %>
