<form action="/admin/doctors" method="post" class="form-horizontal">
  <fieldset>
    <legend>Doktor Ekle</legend>
    <div class="control-group">
      <label class="control-label" for="input01">Bölüm (*)</label>
      <div class="controls">
        <%= select_tag(:department_id, options_from_collection_for_select(Department.all, :id, :name)) %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input02">Ad (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge" id="input02" name="first_name">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input03">Soyad (*)</label>
      <div class="controls">
	<input type="text" class="input-xlarge" id="input03" name="last_name">
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Kaydet</button>
  </div>
</form>
