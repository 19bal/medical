<!-- modal-form -->
<div class="modal hide fade" id="admin">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Personel Girişi</h3>
  </div>
  <div class="modal-body">

    <%= form_tag({:action => 'sign_in', :controller => '/admin'}, :method => 'post') do %>
      <fieldset>
        <div class="control-group">
          <label class="control-label" for="input01">Kullanıcı Adı</label>
          <div class="controls">
            <input type="text" class="input-xlarge" id="input01" name="first_name">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="input02">Parola</label>
          <div class="controls">
            <input type="text" class="input-xlarge" id="input02" name="password">
          </div>
        </div>
      </fieldset>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
      </div>
    <% end %>

  </div>
</div><!--/.modal-form -->
